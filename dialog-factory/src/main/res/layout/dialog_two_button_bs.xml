<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:gravity="center"
	android:background="@color/bs_dialog_bg"
	>
	<LinearLayout
		android:id="@+id/lnaPopupLayout"
		android:orientation="vertical"
		android:layout_width="@dimen/dp_300"
		android:layout_height="@dimen/dp_180"
		android:layout_gravity="center"
		android:layout_marginBottom="@dimen/dp_8"
		>
		<TextView
			android:id="@+id/txtMessage"
			android:layout_width="match_parent"
			android:layout_height="@dimen/dp_144"
			android:background="@drawable/shape_bs_dialog_top_bg"
			android:gravity="center"
			android:textSize="@dimen/dp_14"
			android:textColor="#333333"
			/>
		<LinearLayout
			android:orientation="horizontal"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			>
			<TextView
				android:id="@+id/txtLeftButton"
				style="@style/BlueSky05.BottomBtn.Red"
				android:layout_width="0dp"
				android:layout_height="match_parent"
				android:layout_weight="1"
				android:background="@drawable/shape_bs_dialog_bottom_left_bg"
				android:text="취소"
				/>
			<View
				android:layout_width="@dimen/dp_0.5"
				android:layout_height="match_parent"
				android:background="@android:color/white"
				/>

			<TextView
				android:id="@+id/txtRightButton"
				style="@style/BlueSky05.BottomBtn.Black"
				android:layout_width="0dp"
				android:layout_height="match_parent"
				android:layout_weight="1"
				android:background="@drawable/shape_bs_dialog_bottom_right_bg"
				android:text="확인"
				/>
		</LinearLayout>
	</LinearLayout>
</LinearLayout>
